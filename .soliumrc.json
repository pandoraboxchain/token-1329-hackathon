{
  "extends": "solium:recommended",
  "plugins": ["security", "zeppelin"],
  "rules": {
    "quotes": ["error", "double"],
    "indentation": ["warning", 4],
    "operator-whitespace": "off",
    "no-empty-blocks": "off",
    "security/no-tx-origin": "warning",
    "zeppelin/missing-natspec-comments": "warning"
  }
}